<!DOCTYPE html>
<html>
  <head>
    <title>T</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <h1>合計価格の実装</h1>
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <p class="alert"><%= alert %></p>
    <% if flash[:alret] %>
      <p class="alret"><%= flash[:alret] %></p>
    <% end %>
    <p><%= link_to "ログイン", new_user_session_path %></p>
    <p><%= link_to "サインアップ", new_user_registration_path %></p>
    <p><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" } %></p>
    <p><%= link_to "ホーム", root_path %></p>
    <p><%= link_to "予約一覧", reservations_index_path %></p>
    <%= yield %>
  </body>
</html>
